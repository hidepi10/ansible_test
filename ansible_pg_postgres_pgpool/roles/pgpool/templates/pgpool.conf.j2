listen_addresses = 'localhost'
port = 9999

backend_hostname0 = 'pgmaster'
backend_port0 = 5432
backend_data_directory0 = '{{ pg_data_dir }}'
backend_flag0 = 'ALLOW_TO_FAILOVER'

backend_hostname1 = 'pgslave'
backend_port1 = 5432
backend_data_directory1 = '{{ pg_data_dir }}'
backend_flag1 = 'ALLOW_TO_FAILOVER'

enable_pool_hba = on

sr_check_period = 10
sr_check_user = '{{ replication_user }}'
sr_check_password = '{{ replication_password }}'

health_check_period = 10
health_check_user = 'postgres'

failover_command = '/etc/pgpool2/failover.sh %d %H %P %R'

load_balance_mode = off
master_slave_mode = on
