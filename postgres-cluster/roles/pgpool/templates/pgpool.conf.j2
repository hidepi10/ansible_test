listen_addresses = '*'
port = {{ pgpool_port }}

backend_hostname0 = '127.0.0.1'
backend_port0 = 5433
backend_weight0 = 1
backend_data_directory0 = '/var/lib/pgsql/data/master'
backend_flag0 = 'ALLOW_TO_FAILOVER'

backend_hostname1 = '127.0.0.1'
backend_port1 = 5434
backend_weight1 = 1
backend_data_directory1 = '/var/lib/pgsql/data/slave'
backend_flag1 = 'ALLOW_TO_FAILOVER'

enable_pool_hba = on
sr_check_period = 10
sr_check_user = 'postgres'
health_check_period = 10

failover_command = '/etc/pgpool-II/failover.sh %d %h %p %D %m %H %P %r %R'